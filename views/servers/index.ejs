<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terraria Server Control</title>

    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Server List</a></li>
        </ul>
    </nav>

    <h1>Server List</h1>
    <form action="/create-server" method="post">
        <div>
            <label for="name">Name</label>
            <input type="text" name="name" id="name">
        </div>
        <div>
            <label for="ip">IP</label>
            <input type="text" name="ip" id="ip">
        </div>
        <div>
            <button type="submit">Save</button>
        </div>
    </form>
    
    <hr>
    
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>IP</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (const s of servers) { %>
                <form action="/manage-server" method="post">
                    <input type="hidden" name="id" value="<%= s.id %>">
                    <tr>
                        <td><input type="text" name="name" value="<%= s.name %>"></td>
                        <td><input type="text" name="ip" value="<%= s.ip %>"></td>
                        <td>
                            <button type="submit" name="operation" value="view">View</button>
                            <button type="submit" name="operation" value="edit">Edit</button>
                            <button type="submit" name="operation" value="delete">Delete</button>
                        </td>
                    </tr>
                </form>
            <% } %>
        </tbody>
    </table>
</body>
</html>