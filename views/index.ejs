<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terraria Server Control</title>

    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="container">
        <h1 class="main-title">Terraria Server Control</h1>
        
        <nav class="navbar">
            <a href="/" class="nav-item active">Server List</a>
            <a href="/settings" class="nav-item">Settings</a>
        </nav>
        
        <div class="content">
            <button id="addServerBtn" class="btn primary-btn">Add Server</button>
            
            <div class="server-list">
                <% if (servers && servers.length > 0) { %>
                    <% servers.forEach(server => { %>
                        <div class="server-card">
                            <div class="server-info">
                                <h2 class="server-title"><%= server.name %> | <%= new Date(server.createdAt).toLocaleString() %></h2>
                                <p class="server-host">Host: <%= server.host %> | Port: <%= server.port %></p>
                                <p class="server-status">Status: <span class="status-<%= server.status.toLowerCase() %>"><%= server.status %></span></p>
                            </div>
                            <div class="server-actions">
                                <button class="btn action-btn start-btn" data-id="<%= server.id %>" <%= server.status === 'Running' ? 'disabled' : '' %>>Start</button>
                                <button class="btn action-btn stop-btn" data-id="<%= server.id %>" <%= server.status === 'Stopped' ? 'disabled' : '' %>>Stop</button>
                                <button class="btn action-btn edit-btn" data-id="<%= server.id %>">Edit</button>
                                <button class="btn action-btn delete-btn" data-id="<%= server.id %>">Delete</button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="empty-state">
                        <p>No servers added yet. Click "Add Server" to get started.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="/js/index.js"></script>
</body>
</html>